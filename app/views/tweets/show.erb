<h3 style="color: #16A085;"><% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %></h3>

<h2>Tweet #<%= @tweet.id %></h2>

<%= @tweet.content %>

<br><br><br>

<a href="/tweets/<%= @tweet.id %>/edit">Edit Tweet</a>

<br><br>

<form action="/tweets/<%= @tweet.id %>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <button type="submit" value="delete">Delete Tweet</button>
</form>

<br><br><br>

<a href="/tweets">Home</a>  <b>|</b>  <a href="/users/<%= current_user.slug %>">My Tweets</a>  <b>|</b>  <a href="/logout">Log Out</a>
